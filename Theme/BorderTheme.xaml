<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style  TargetType="{x:Type Border}" 
            x:Key="SmallBorderBox">
        <Setter Property="Margin" Value="10,0,0,0" />
        <Setter Property="Width" Value="125" />
        <Setter Property="Height" Value="125" />
        <Setter Property="CornerRadius" Value="5" />

    </Style>

    <Style TargetType="{x:Type Border}" 
           x:Key="Challenge1Card"
           BasedOn="{StaticResource SmallBorderBox}">
        <Setter Property="Background" Value="#844eff" />
    </Style>

    <Style TargetType="{x:Type Border}" 
        x:Key="Challenge2Card"
        BasedOn="{StaticResource SmallBorderBox}">
        <Setter Property="Background" Value="#ffc554" />
    </Style>


    <Style TargetType="{x:Type Border}" 
        x:Key="Challenge3Card"
        BasedOn="{StaticResource SmallBorderBox}">
        <Setter Property="Background" Value="#4e99ff" />
    </Style>

    <Style TargetType="{x:Type Border}" 
           x:Key="Challenge4Card"
           BasedOn="{StaticResource SmallBorderBox}">
        <Setter Property="Background" Value="#294B29" />
    </Style>

    <Style TargetType="{x:Type Border}" 
           x:Key="Challenge5Card"
           BasedOn="{StaticResource SmallBorderBox}">
        <Setter Property="Background" Value="#6D2932" />
    </Style>
</ResourceDictionary>